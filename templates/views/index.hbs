<body>
    {{!-- navbar --}}
    {{>navbar}}

    {{!-- main --}}
    <div class="container-fluid">
        <div class="row pt-5">
            <div class="col-md-10 col-12 mx-auto">
                <div class="row main">
                    <div class="col-md-6 col-12 order-md-0 order-1 p-3 d-flex justify-content-center flex-column">
                        <h1>Upload a file</h1>
                        <p class="my-3">
                            The easiest way to share files across all of your devices. Send files of any size and type,
                            as many times as you want, all for free!

                        </p>
                        <p>
                            <input type="file" id="file-input">
                            <label for="file-input">Select a file</label>
                        </p>

                        <div class="box">
                            <div id="test" style="width:0px"></div>
                        </div>
                        <p id="perc"></p>
                        <p id="message"></p>
                    </div>


                    <div class="col-md-6 col-12 order-md-1 order-0">
                        <img src="/images/pic.svg" class="pic" alt="File share">
                    </div>
                </div>
            </div>
        </div>
    </div>


    </div>




